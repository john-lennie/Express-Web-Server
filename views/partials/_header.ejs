<title>TinyApp</title>

<h1>TinyApp</h1>
<p>Short URL Generator</p>

<% if (user_id) { %>
  <p><%= user_id %></p>
  <form action="/logout" method="POST">
    <input type="submit" value="Logout">
  </form>
  <a href="/urls">All URLs</a>
  <a href="/urls/new">New URL</a>
  <% ; %>
<% } else { %>
  <a href="/login">Login</a>
  <a href="/register">Register</a>
   <% ; %>
<% } %>

<hr />

<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

<style>

body {
  font-family: 'Open Sans', sans-serif;
  color: #000;
  font-size: 16px;
  margin: 20px;
}

hr {
  height: 1px;
  border: none;
  background-color: #000;
  margin-bottom: 20px;
}

ul {
  list-style: none;
  padding-left: 0;
}

a, a.visited {
  font-size: 10px;
  display: inline-block;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #000;
  text-decoration: none;
  line-height: 20px;
  padding: 0 10px;
  margin: 5px 0 20px 0;
  border: 1px solid #000;
}

form {
  display: inline-block;
}

input {
  display: inline-block;
  font-size: 10px;
  display: inline-block;
  background: #fff;
  text-transform: uppercase;
  letter-spacing: 1px;
  color: #000;
  cursor: pointer;;
  text-decoration: none;
  line-height: 20px;
  padding: 0 10px;
  margin: 5px 0 20px 0;
  border: 1px solid #000;
}

input[type=submit] {
  background: #000;
  color: #fff;
}

</style>
